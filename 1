#include <iostream>
using namespace std;

int main() {
    double k; 
    double p; 
    double r;

    cout << "введите сумму (k): ";
    cin >> k;
    cout << "введите ставку (p): ";
    cin >> p;
    cout << "введите прибыль (r): ";
    cin >> r;

    double totalDebt = k; 
    double totalProfit = 0; 
    int years = 0; 

    double interestRate = p / 100;

    while (totalProfit < totalDebt) {
        years++;
        totalProfit += r;
        totalDebt += totalDebt * interestRate;

        cout << "год " << years << ": прибыль = " << totalProfit 
             << ", долг = " << totalDebt << endl;
    }

    cout << "предприниматель сможет закрыть долг через " << years << " лет." << endl;

    return 0;
}
